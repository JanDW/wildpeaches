{
  "name": "wild-peaches",
  "version": "0.0.1",
  "description": "A shared blog",
  "scripts": {
    "css:postcss-dev": "npx postcss src/assets/styles/app.css -o tmp/style.css --env development",
    "css:postcss-prod": "npx postcss src/assets/styles/app.css -o tmp/style.css --env production",
    "css:minify": "npx cleancss tmp/style.css -o src/assets/styles/style.min.css",
    "css:build-dev": "npm run css:postcss-dev && cp tmp/style.css src/assets/styles/style.min.css",
    "css:build-prod": "NODE_ENV=production && ELEVENTY_PRODUCTION=true && npm run css:postcss-prod && npm run css:minify",
    "start": "npm run css:build-prod && npx @11ty/eleventy",
    "serve": "npm run css:build-dev && npx @11ty/eleventy --serve",
    "md:lint:": "markdownlint src/**/*.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JanDW/wildpeaches.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,json}": [
      "prettier --write",
      "git add -A"
    ],
    "scripts/**/*.{js,json}": [
      "prettier --write",
      "git add -A"
    ],
    "styles/**/*.css": [
      "csscomb --tty-mode --",
      "git add -A"
    ]
  },
  "keywords": [],
  "author": "Jan De Wilde",
  "license": "",
  "bugs": {
    "url": "https://github.com/JanDW/wildpeaches/issues"
  },
  "homepage": "https://github.com/JanDW/wildpeaches#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@iktakahiro/markdown-it-katex": "^4.0.1",
    "@jamshop/eleventy-filter-dump": "^1.0.2",
    "clean-css-cli": "^4.3.0",
    "csscomb": "^4.3.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "markdown-it": "^12.0.2",
    "markdown-it-anchor": "^6.0.1",
    "markdown-it-attrs": "^3.0.3",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-image-lazy-loading": "^1.0.2",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "postcss": "^8.1.14",
    "postcss-cli": "^8.3.0",
    "postcss-custom-selectors": "^5.1.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend-rule": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "http-server": "^0.12.3",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "markdownlint-cli": "^0.25.0",
    "prettier": "2.2.1"
  }
}
